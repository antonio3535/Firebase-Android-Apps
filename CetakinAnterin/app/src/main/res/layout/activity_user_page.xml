<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".UserPage">

    <Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:text="Welcome"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </Toolbar>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/layout_status"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtTokoTitle"
            android:text="Toko Buka"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTokoSubTitle"
            android:text="Silahkan Buat Pesanan"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_userNews"
        android:text="pengumuman"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/layout_status"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_Cetakin"
        android:text="Buat Pesanan"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/txt_userNews"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_button_bg"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_CekStatus"
        android:layout_below="@id/btn_Cetakin"
        android:text="Cek Pesanan"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/dikerjakan"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_button_bg_ijo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_historiorder"
        android:layout_below="@id/btn_CekStatus"
        android:text="Histori Pesanan"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_button_bg_kuning"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@+id/btn_historiorder"
        android:id="@+id/logout_user"
        android:text="Logout"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="@color/diantar"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_button_bg_merah"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_print"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:text="@string/app_name"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>