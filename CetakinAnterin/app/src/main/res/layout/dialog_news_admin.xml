<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Pengumuman"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/input_news"
            android:hint="Edit Pengumuman"
            android:gravity="center"
            android:textSize="16sp"
            android:maxLength="100"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_newsClear"
                android:text="Clear"
                android:textAllCaps="false"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/ic_button_bg_small_kuning"
                android:layout_width="100dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_newsSave"
                android:text="Save"
                android:textAllCaps="false"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/ic_button_bg_small"
                android:layout_width="100dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>